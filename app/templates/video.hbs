<header>
	<img src='youtube-logo.png' />
	<div class='searchBox'>
		{{input type="text" id="search-box" value = searchQuery action="search"}}
		<button class = 'fa fa-search' {{action "search" }}/>
	</div>
	{{!-- <button class='loginButton'><a href="https://accounts.google.com/ServiceLogin?passive=true&continue=https%3A%2F%2Fwww.youtube.com%2Fsignin%3Faction_handle_signin%3Dtrue%26next%3D%252F%26app%3Ddesktop%26feature%3Dsign_in_button%26hl%3Den&uilel=3&service=youtube&hl=en">Sign In</a></button> --}}
</header>

<section>
	<div class='videoSection'>
		{{video-player youtube_id=model.youtube_id}}

		<div class="videoTitle">
			<h2>{{model.title}}</h2>
			<div>
				<div class="videoAuthorInfo">
					<img src="http://placehold.it/50x50" />
				
					{{model.author}}
					<button class = "subscribeButton">Subscribe</button>
				</div>
			</div>
		</div>

		<div class="videoDescription">
			<strong> Uploaded on {{model.date}} </strong>
			<p> {{model.description}} </p>
		</div>
	</div>
</section>